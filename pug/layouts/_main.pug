        script.
            var animation = {};

            function loadAnimation() {
                if (window.innerWidth < 768) {
                    animation = lottie.loadAnimation({
                        container: document.getElementById('lottie-container'), 
                        renderer: 'svg',
                        loop: false,
                        autoplay: true,
                        path: './img/taxim-m.json'
                    });
                } else {
                    animation = lottie.loadAnimation({
                        container: document.getElementById('lottie-container'), 
                        renderer: 'svg',
                        loop: false,
                        autoplay: true,
                        path: './img/taxim.json'
                    });
                }

                animation.addEventListener('DOMLoaded', function() {
                    if (window.innerWidth < 768) {
                        animation.path = './img/taxim-m.json';
                    }

                    var totalFrames = animation.totalFrames;
                    var fps = animation.frameRate;
                    var duration = animation.getDuration();
                    
                    var startFrame = Math.floor(fps * 5);
                    var endFrame = Math.floor(fps * 10);
                    var isReversed = true;

                    function playPingPong() {
                        animation.setSpeed(0.5);
                        if (!isReversed) {
                            animation.setDirection(1);
                            animation.playSegments([startFrame, endFrame], true);
                        } else {
                            animation.setDirection(-1);
                            animation.playSegments([endFrame, startFrame], true);
                        }
                        isReversed = !isReversed;
                    }
                    
                    animation.addEventListener('complete', function() {
                        playPingPong();
                    });
                    
                });
            }

            // Cargar la animación inicial
            loadAnimation();

            // Escuchar cambios en el tamaño de la pantalla
            window.addEventListener('resize', function() {
                animation.destroy(); // Destruir la animación actual
                loadAnimation(); // Recargar la animación con el nuevo tamaño
            });

            // Inicializar Swiper para Instagram Móvil
            const swiperInstagramMovile = new Swiper('#swiperInstagramMovile', {
                slidesPerView: 1.6,
                centeredSlides: true,
                loop: true,
                pagination: {
                    el: '.swiper-pagination',
                    clickable: true
                },
                autoplay: {
                    delay: 3000,
                    disableOnInteraction: false
                },
                breakpoints: {
                    576: {
                        slidesPerView: 1.8,
                        speed: 600,
                        spaceBetween: 10,
                    },
                    768: {
                        slidesPerView: 4,
                        centeredSlides: false,
                        spaceBetween: 30,
                        loop: false,
                        spaceBetween: 5
                    }
                }
            });

            const swiperCards = new Swiper('#swiperCards', {
                slidesPerView: 1,
                centeredSlides: true,
                loop: true,
                pagination: {
                    el: '.swiper-pagination',
                    clickable: true
                },
                autoplay: {
                    delay: 3000,
                    disableOnInteraction: false
                },
                breakpoints: {
                    576: {
                        slidesPerView: 1.1,
                        speed: 600,
                        spaceBetween: 10,
                        loop: true
                    },
                    768: {
                        slidesPerView: 3,
                        centeredSlides: false,
                        spaceBetween: 30,
                        loop: false,
                        spaceBetween: 5
                    }
                }
            });

            // Inicializar Swiper para Testimonios
            const swiperTestimonios = new Swiper('#swiperTestimonios', {
                loop: true,
                slidesPerView: 1.1,
                centeredSlides: true,
                autoplay: {
                    delay: 5000,
                    disableOnInteraction: true
                },
                pagination: {
                    el: '.swiper-pagination',
                    clickable: true
                }
            });

            // Inicializar todos los sliders de productos
            const productSliders = [];
            document.querySelectorAll('.slider-product').forEach((slider, index) => {
                productSliders[index] = new Swiper(slider, {
                    loop: true,
                    slidesPerView: 1,
                    centeredSlides: true,
                    autoplay: {
                        delay: 1000,
                        disableOnInteraction: true,
                        enabled: false
                    },
                    pagination: {
                        el: '.swiper-pagination',
                        clickable: true
                    }
                });

                // Ocultar paginación inicialmente
                const pagination = slider.querySelector('.swiper-pagination');
                if (pagination) {
                    pagination.style.opacity = '0';
                    pagination.style.transition = 'opacity 0.3s';
                }

                // Eventos para mostrar/ocultar autoplay y paginación
                slider.addEventListener('mouseenter', () => {
                    if (productSliders[index].autoplay) {
                        productSliders[index].autoplay.start();
                    }
                    const pagination = slider.querySelector('.swiper-pagination');
                    if (pagination) {
                        pagination.style.opacity = '9';
                    }
                });
                
                slider.addEventListener('mouseleave', () => {
                    if (productSliders[index].autoplay) {
                        productSliders[index].autoplay.stop();
                    }
                    const pagination = slider.querySelector('.swiper-pagination');
                    if (pagination) {
                        pagination.style.opacity = '0';
                    }
                });
            });
            
